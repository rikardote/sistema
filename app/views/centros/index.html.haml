%p#notice= notice
.panel.panel-default
  %table.table.table-hover.table-condensed
    %thead
      %tr
        %th Centro iden
        %th Centro descripcion
        %th{:colspan => "3"}
    %tbody
      - @centros.each do |centro|
        %tr
          %td= centro.centro_iden.to_s.rjust(5, '0')
          %td= centro.centro_descripcion
          %td= link_to 'Show', centro
          %td= link_to 'Edit', edit_centro_path(centro)
          %td= link_to 'Destroy', centro, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Centro', new_centro_path