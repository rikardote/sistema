= simple_form_for @incident, html: { multipart: true } do |f|
  - if @incident.errors.any?
    #errors
      %h2
        = pluralize(@incident.errors.count, "error")
        precented this incident from saving
        %ul
          - @incident.error.full_messages.each do |msg|
            %li = msg
  .form-group
    = f.input :cod, input_html: { class: 'form-control'}
  .form-group
    = f.input :name, input_html: { class: 'form-control'}
    
  =f.button :submit, class: 'btn btn-primary'


