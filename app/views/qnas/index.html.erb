<p id="notice"><%= notice %></p>

<h1>Listing Qnas</h1>

<table>
  <thead>
    <tr>
      <th>Qna</th>
      <th>Qna Year</th>
      <th>Activada</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  
    <% @qnas.each do |qna| %>
      <tr>
        <td><%= qna.qna_cod.to_s.rjust(2, '0') %></td>
        <td><%= qna.qna_year %></td>
        <%= simple_form_for(@qna) do |f| %>
          <td><%= f.check_box :activate, {:class=>"checkbox"}, "true", "false" %></td>
        <% end %>
        <td><%= link_to 'Show', qna %></td>
        <td><%= link_to 'Edit', edit_qna_path(qna) %></td>
        
        <td><%= link_to 'Destroy', qna, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  
  </tbody>
</table>

<br>

